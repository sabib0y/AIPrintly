# =============================================================================
# AIPrintly Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_URL="http://localhost:5173"
NODE_ENV="development"

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET="your-session-secret-here"

# -----------------------------------------------------------------------------
# Payments (Stripe)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------
# Primary: Replicate (SDXL)
REPLICATE_API_TOKEN="r8_..."

# Fallback: OpenAI (DALL-E, GPT-4)
OPENAI_API_KEY="sk-..."

# Which provider to use for images (replicate | openai)
AI_IMAGE_PROVIDER="replicate"

# -----------------------------------------------------------------------------
# Cloud Storage (Cloudflare R2)
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"
R2_BUCKET_NAME="aiprintly-assets"
R2_PUBLIC_URL="https://assets.aiprintly.co.uk"

# -----------------------------------------------------------------------------
# Fulfilment Providers
# -----------------------------------------------------------------------------
# Printful
PRINTFUL_API_KEY="your-printful-api-key"
PRINTFUL_WEBHOOK_SECRET="your-printful-webhook-secret"

# Blurb
BLURB_API_KEY="your-blurb-api-key"
BLURB_WEBHOOK_SECRET="your-blurb-webhook-secret"

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@aiprintly.co.uk"

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
SENTRY_DSN="https://...@o....ingest.sentry.io/..."
